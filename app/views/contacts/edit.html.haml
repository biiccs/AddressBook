%h2 Edit Contact

= simple_form_for @contact, html: { class: 'form-horizontal' },
  method: :path,
  wrapper: :horizontal_form, as: 'contact', url: contacts_path do |f|


  =f.input_field :name, placeholder: 'Name of contact', class: 'form-control',
    label: 'Your username please'

  =f.input_field :phone, placeholder: 'Phone number', class: 'form-control'

  =f.input_field :email, placeholder: 'user@domain.com', class: 'form-control'

  =f.button :submit, class: 'btn btn-default'

=link_to 'Back', contacts_path