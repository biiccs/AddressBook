.form-inputs
  =f.input :name, placeholder: 'Name of contact', class: 'form-control'
  =f.input :phone, placeholder: 'Phone number', class: 'form-control'
  =f.input :email, placeholder: 'user@domain.com', class: 'form-control'
  =f.file_field :photo, class: 'form-control'
  =f.hidden_field :photo_cache

.form-actions
  =link_to 'Cancel', contacts_path, class: 'btn btn-default'
  =f.button :submit, class: 'btn btn-success'